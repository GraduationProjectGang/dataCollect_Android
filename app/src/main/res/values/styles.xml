<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#418FF6</item>
        <item name="colorPrimaryDark">#00224C</item>
        <item name="colorAccent">#2463b6</item>
    </style>
    <style name="TextStyleBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextStyleNormal">
        <item name="android:textSize">17dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextStyle">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00224C</item>
        <item name="android:textSize">20dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>
    <style name="RadioWithTextOnTop">
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>
    <style name="ViewSurvey">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">#8A989898</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>
</resources>
